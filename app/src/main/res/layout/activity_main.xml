<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.splashtop.demo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_surfaceview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_button_surface_view" />

        <View
            android:layout_width="2dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/button_textureview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_button_texture_view" />

        <View
            android:layout_width="2dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/button_noview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_button_no_view" />

    </LinearLayout>

    <Button
        android:id="@+id/button_start_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_button_start" />

    <RelativeLayout
        android:id="@+id/layout_session"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp" />

</LinearLayout>
